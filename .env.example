# .env.example
LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=
MARKET_DATA_PROVIDER=yahoo
ALPHA_VANTAGE_API_KEY=
EXA_API_KEY=
DATABASE_URL=postgresql+asyncpg://localhost/boardroom

# Redis cache (optional - falls back to in-memory if unavailable)
REDIS_URL=redis://localhost:6379/0

# Database password (used by Docker Compose)
DB_PASSWORD=boardroom

# JWT Secret (REQUIRED for authentication) - Generate with: openssl rand -hex 32
JWT_SECRET=

# CORS Origins - Comma-separated list of allowed origins
# Development: http://localhost:5173
# Production: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=http://localhost:5173

# A 32-byte hex-encoded secret key for encrypting user API keys.
# Generate one with: openssl rand -hex 32
API_KEY_ENCRYPTION_KEY=

# Test database (for integration tests)
TEST_DATABASE_URL=postgresql+asyncpg://boardroom_test:test_password@localhost:5433/boardroom_test

# Langfuse Configuration
LANGFUSE_SECRET_KEY=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_HOST=http://localhost:3000
# Generate these: openssl rand -hex 32
LANGFUSE_SECRET=
LANGFUSE_SALT=


# MinIO Configuration
MINIO_ROOT_USER=minio
MINIO_ROOT_PASSWORD=minio123
